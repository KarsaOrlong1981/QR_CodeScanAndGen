<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="MintCream" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR_CodeScanner.Views.MainPage" Title="QR-Code Scan &amp; Gen"
            >


    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="QR-Code Generator"
                 
                 Order="Secondary"
                 Priority="0"
                  Clicked="ToolbarItemGenerator_Clicked" 
                           />
        
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" >
            <Image  Source="ScanGen.png"  Aspect="AspectFit"   HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
           
                <Button 
            Text="Scannen mit Kamera" 
            CornerRadius="20" 
            BorderColor="Gray" 
            BorderWidth="3" 
            FontSize="20" 
            BackgroundColor="White" 
            TextColor="Black" 
            HeightRequest="100" 
            WidthRequest="200" 
            HorizontalOptions="CenterAndExpand" 
            VerticalOptions="EndAndExpand"  
            x:Name="btn_Scann" 
            Clicked="btn_Scann_Clicked"/>
            </StackLayout>

       

    </ScrollView>
   

</ContentPage>