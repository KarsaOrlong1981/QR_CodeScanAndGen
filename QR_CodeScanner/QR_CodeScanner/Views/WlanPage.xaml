<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="SteelBlue" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:QR_CodeScanner.ViewModel" x:DataType="viewmodel:WLanViewModel"
             x:Class="QR_CodeScanner.Views.WlanPage" Title="{Binding TitleCulture}" >
    <Grid x:Name="container">
        <Grid.RowDefinitions >
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Frame Grid.Row="0" Grid.Column="1" Margin="10" BorderColor="SteelBlue" CornerRadius="20" HasShadow="true" VerticalOptions="CenterAndExpand" >
            <Entry
                
                Text="{Binding SSIDText}"
                Keyboard="Url" 
               BackgroundColor="White" 
               TextColor="Black" 
               FontSize="Medium" 
               Placeholder="SSID" 
               PlaceholderColor="SteelBlue" 
               />
        </Frame>
       
            <Frame Grid.Row="1" Grid.Column="1" Margin="10" BorderColor="SteelBlue" CornerRadius="20" HasShadow="true" VerticalOptions="CenterAndExpand" >
                <StackLayout>
                    <Entry
                
                Text="{Binding WpaWep}"
                Keyboard="Url" 
               BackgroundColor="White" 
               TextColor="Black" 
               FontSize="Medium"   
                
              
                    IsReadOnly="{Binding ReadOnly}"
               />
                    <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                        <Button 
                
                   Grid.Row="0" Grid.Column="0"
                    Command="{Binding ButtonWPAClicked}"
                    CornerRadius="20" 
                    Text="WPA/WPA2"
                    FontSize="Micro" 
                    TextColor="Black" 
                    BackgroundColor="White" 
                    BorderColor="SteelBlue" 
                    BorderWidth="2" 
                    HorizontalOptions="StartAndExpand"   />
                        <Button 
                
                   Grid.Row="0" Grid.Column="1"
                    Command="{Binding ButtonWEPClicked}"
                    CornerRadius="20" 
                    Text="WEP"
                    FontSize="Micro"
                    TextColor="Black"
                    BackgroundColor="White" 
                    BorderColor="SteelBlue" 
                    BorderWidth="2" 
                    HorizontalOptions="CenterAndExpand"    />
                        <Button 
                
                   Grid.Row="0" Grid.Column="2"
                    Command="{Binding ButtonNoneClicked}"
                    CornerRadius="20" 
                    Text="none"
                    FontSize="Micro"  
                TextColor="Black"
                    BackgroundColor="White" 
                    BorderColor="SteelBlue" 
                    BorderWidth="2" 
                    HorizontalOptions="EndAndExpand"   />
                    </Grid>
                </StackLayout>
                
            </Frame>
            
            
               
          

                <Frame Grid.Row="2" Grid.Column="1" VerticalOptions="CenterAndExpand"  Margin="10" CornerRadius="20" BorderColor="SteelBlue" BackgroundColor="White">
                    <Entry  Placeholder="{Binding PasswordCulture}"
                            Text="{Binding Password}"    
                            FontSize="Medium"
                            TextColor="Black" 
                            PlaceholderColor="SteelBlue" />
                </Frame>

               
            
       
        
            <Button Grid.Row="3" Grid.Column="1" VerticalOptions="CenterAndExpand" 
                    x:Name="btn_Generate"
            
                    Command="{Binding ButtonGenerateClicked}"
                    CornerRadius="20" 
                    Text="{Binding ButtonCulture}"
                    FontSize="20"
                    TextColor="White"
                    BackgroundColor="LightSteelBlue"  
                    BorderColor="Gray" 
                    BorderWidth="4" 
                    HorizontalOptions="Center"    />
        
    </Grid>
</ContentPage>