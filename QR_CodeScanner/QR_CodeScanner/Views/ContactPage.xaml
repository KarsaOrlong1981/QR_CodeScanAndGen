<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Padding="10" BackgroundColor="{Binding Background}" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:QR_CodeScanner.ViewModel" x:DataType="viewmodel:ContactViewModel"
             x:Class="QR_CodeScanner.Views.ContactPage" Title="Generate Contact QR-Code">
    <ScrollView>
        <StackLayout >
            <Frame Margin="10,0,10,0" BorderColor="{Binding Frame}" BackgroundColor="{Binding Button}" CornerRadius="20"  HasShadow="true">
                <Entry 
                x:Name="entry"
                    TextChanged="entry_TextChanged" 
                Text="{Binding CompName}"
                Keyboard="Text"  
               BackgroundColor="{Binding Button}" 
               TextColor="{Binding Txt}" 
               FontSize="20" 
               Placeholder="Complete Name" 
               PlaceholderColor="{Binding Background}" 
               />
            </Frame>
            <StackLayout >
                <Frame Margin="10,0,10,0" BorderColor="{Binding Frame}" BackgroundColor="{Binding Button}" CornerRadius="20" HasShadow="true">
                    <Entry
                 
                Text="{Binding Titel}"
                Keyboard="Text"   
               BackgroundColor="{Binding Button}" 
               TextColor="{Binding Txt}" 
               FontSize="20" 
               Placeholder="Titel" 
               PlaceholderColor="{Binding Background}" 
               />
                </Frame>
            </StackLayout>
            <StackLayout>
                <Frame Margin="10,0,10,0" BorderColor="{Binding Frame}" BackgroundColor="{Binding Button}" CornerRadius="20" HasShadow="true" >
                    <StackLayout Orientation="Horizontal">
                        <Image Source="Company.png" />
                        <Entry
                HorizontalOptions="FillAndExpand" 
                Text="{Binding Company}"
                Keyboard="Text" 
               BackgroundColor="{Binding Button}" 
               TextColor="{Binding Txt}" 
               FontSize="20" 
               SelectionLength="200"
               Placeholder="Company" 
               PlaceholderColor="{Binding Background}" 
               />
                    </StackLayout>

                </Frame>
            </StackLayout>
            <StackLayout>
                <Frame Margin="10,0,10,0" BorderColor="{Binding Frame}" BackgroundColor="{Binding Button}" CornerRadius="20" HasShadow="true" >
                    <StackLayout Orientation="Horizontal">
                        <Image Source="EMailQR.png" />
                        <Entry
                HorizontalOptions="FillAndExpand" 
                Text="{Binding Email}"
                Keyboard="Email"  
               BackgroundColor="{Binding Button}" 
               TextColor="{Binding Txt }" 
               FontSize="20" 
               Placeholder="E-Mail" 
               PlaceholderColor="{Binding Background}" 
               />
                    </StackLayout>

                </Frame>
            </StackLayout>
            <StackLayout>
                <Frame Margin="10,0,10,0" BorderColor="{Binding Frame}" BackgroundColor="{Binding Button}" CornerRadius="20" HasShadow="true" >
                    <StackLayout Orientation="Horizontal">
                        <Image Source="Telefon.png" />
                        <Entry
                HorizontalOptions="FillAndExpand"
                Text="{Binding Phone}"
                Keyboard="Telephone"  
               BackgroundColor="{Binding Button}" 
               TextColor="{Binding Txt }" 
               FontSize="20" 
               Placeholder="Phone" 
               PlaceholderColor="{Binding Background}" 
               />
                    </StackLayout>
                </Frame>
                </StackLayout>
           
            
            <StackLayout>
                <Frame Margin="10,0,10,0" BorderColor="{Binding Frame}" BackgroundColor="{Binding Button}" CornerRadius="20" HasShadow="true" >
                    <StackLayout Orientation="Horizontal">
                        <Image Source="Adress.png" />
                        <Entry
                HorizontalOptions="FillAndExpand"
                Text="{Binding Adress}"
                Keyboard="Text"  
               BackgroundColor="{Binding Button }" 
               TextColor="{Binding Txt}" 
               FontSize="20" 
               Placeholder="Adress" 
               PlaceholderColor="{Binding Background}" 
               />
                    </StackLayout>

                </Frame>
            </StackLayout>
            <StackLayout>
                <Frame Margin="10,0,10,0" BorderColor="{Binding Frame}" BackgroundColor="{Binding Button}" CornerRadius="20" HasShadow="true" >
                    <StackLayout Orientation="Horizontal">
                        <Image Source="Web.png" />
                        <Entry
                HorizontalOptions="FillAndExpand"
                Text="{Binding Website}"
                Keyboard="Url" 
               BackgroundColor="{Binding Button}" 
               TextColor="{Binding Txt }" 
               FontSize="20" 
               Placeholder="Website" 
               PlaceholderColor="{Binding Background}" 
               />
                    </StackLayout>

                </Frame>
            </StackLayout>
            <StackLayout Padding="20" >
                <Button 
                 
            Command="{Binding ButtonGenerateClicked}"
                    x:Name="btn_Generate"
                    CornerRadius="20" 
                    Text="Generate QR-Code "
                    FontSize="20"
                    TextColor="White"
                    BackgroundColor="{Binding Frame}"  
                    BorderColor="{Binding Button}" 
                    BorderWidth="4" 
                    HorizontalOptions="CenterAndExpand"      />
            </StackLayout>
        </StackLayout>
    </ScrollView>
       
    
</ContentPage>